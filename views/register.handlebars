<div class="container">
    <h2 align="center">Register</h2>
     {{#each errors}}
        <div class="alert alert-danger">{{text}}</div>
    {{else}}
    {{/each}}
    <p>Already have account? <a href="/">Login Here</a></p>
    <form action="/processRegister" method="POST">
        <div class="form-group">
            <label for="exampleInputEmail1">User Name</label>
            <input type="text" class="form-control" id="user-name" name="userName"  placeholder="Enter User Name" required>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="input-password" name="userPassword" placeholder="Password" required>
        </div>
        <div class="form-group form-check" align="center">
            <button type="submit" class="btn btn-primary" name="buttonVar" value="register">Register</button>
        </div>
    </form>
</div>

